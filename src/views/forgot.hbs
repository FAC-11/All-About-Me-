{{> header }}

<div class="background-image cover aspect-ratio--object">
  <div class="background-overlay cover aspect-ratio--object ">
    <section class="white mt6">
      {{> messages }}
      <form class="" action="/forgot" method="POST">
        <br>

        <input class="darkgray bg-white-40 w-100 h3 pa1 bn mb2 mw6 db pl2 center" id="email" type="email" placeholder="email" name="email" {{#if userData}} value="{{userData.email}}" {{/if}} required>

        <button class="white purple-background w-100 h3 pa1 bn mb2 mw6 db center" type="submit" name="submit"> Submit </button>
      </form>
        <p class="white tc"> Or <a class="no-underline" href="/signup">sign up!</a></p>
    </section>
  </div>
</div>
